# Environment Configuration
ENVIRONMENT=development

# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_guild_id_here
# Comma-separated list of channel IDs, or use "ALL" to monitor all channels in the guild
DISCORD_CHANNEL_IDS=channel1,channel2,channel3

# Database Configuration
DATABASE_URL=postgresql://discord_bot:dev_password@localhost:5432/austin_langchain_bot
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Configuration (for caching and task queues)
REDIS_URL=redis://localhost:6379

# LangSmith Configuration
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_api_key
LANGCHAIN_PROJECT=austin-langchain-discord-bot

# Model Router Configuration
REQUESTY_API_KEY=your_requesty_api_key
REQUESTY_BASE_URL=https://api.requesty.ai/v1

# Default Model Configuration
DEFAULT_RESEARCH_MODEL=claude-3-sonnet-20240229
DEFAULT_WRITING_MODEL=claude-3-sonnet-20240229
DEFAULT_EDITING_MODEL=claude-3-haiku-20240307

# Perplexity API Configuration
PERPLEXITY_API_KEY=your_perplexity_api_key
PERPLEXITY_BASE_URL=https://api.perplexity.ai

# Buttondown Configuration
BUTTONDOWN_API_KEY=your_buttondown_api_key
BUTTONDOWN_BASE_URL=https://api.buttondown.email/v1

# Newsletter Configuration
NEWSLETTER_SCHEDULE_DAILY=0 6 * * *  # 6 AM CST daily
NEWSLETTER_SCHEDULE_WEEKLY=0 6 * * 1  # 6 AM CST Monday
TIMEZONE=America/Chicago

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting Configuration
DISCORD_RATE_LIMIT_REQUESTS=50
DISCORD_RATE_LIMIT_PERIOD=60
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_PERIOD=60

# Content Configuration
MAX_DISCUSSION_AGE_DAYS=7
MIN_ENGAGEMENT_SCORE=5.0
MAX_NEWSLETTER_LENGTH=5000

# Security Configuration
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Development Configuration
DEBUG=true
TESTING=false